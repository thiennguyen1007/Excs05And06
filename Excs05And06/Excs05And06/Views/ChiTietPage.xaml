<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Excs05And06.Views.ChiTietPage"
             Title="{Binding Name}"
             >
    <StackLayout Orientation="Vertical" HorizontalOptions="Center" Margin="0,20,0,0" Spacing="10">
        <Image Source="{Binding IMG}" HorizontalOptions="Center"/>
        <Label Text="{Binding ID}" HorizontalOptions="Center"/>
        <Label Text="{Binding Name}" HorizontalOptions="Center"/>
        <Label Text="{Binding NgaySinh}" HorizontalOptions="Center"/>
        <Label Text="{Binding Desc}" HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>